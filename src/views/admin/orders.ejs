<%- include("../partials/admin_header", { 
    user,
    active: "orders",
    pageTitle: "Ã“rdenes",
    showAddButton: false
}) %>

<div class="admin-content">

    <!-- CARD DE TABLA DE Ã“RDENES -->
    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">
                <span class="card-title-icon">ðŸ›’</span>
                Ã“rdenes Recientes
            </h3>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th># Orden</th>
                        <th>Cliente</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Fecha</th>
                    </tr>
                </thead>

                <tbody>
                    <% orders.forEach(o => { %>
                        <tr>
                            <td>#<%= o.order_number %></td>
                            <td><%= o.customer_email %></td>
                            <td>$<%= o.total_amount.toLocaleString("es-MX") %></td>
                            
                            <!-- STATUS BADGE -->
                            <td>
                                <% if (o.status === "completed") { %>
                                    <span class="table-badge badge-success">Completado</span>
                                <% } else if (o.status === "pending") { %>
                                    <span class="table-badge badge-warning">Pendiente</span>
                                <% } else if (o.status === "canceled") { %>
                                    <span class="table-badge badge-danger">Cancelado</span>
                                <% } else { %>
                                    <span class="table-badge badge-primary"><%= o.status %></span>
                                <% } %>
                            </td>

                            <td><%= new Date(o.created_at).toLocaleString("es-MX") %></td>
                        </tr>
                    <% }) %>
                </tbody>

            </table>
        </div>
    </div>

</div>

<%- include("../partials/admin_footer", { scripts: "" }) %>