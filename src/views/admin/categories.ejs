<link rel="stylesheet" href="/css/admin-panel.css">

<%- include("../partials/admin_header", { 
    user,
    active: "categories",
    pageTitle: "Categor√≠as",
    showAddButton: false
}) %>

<div class="admin-content">

    <!-- CARD DEL FORMULARIO -->
    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">
                <span class="card-title-icon">üóÇÔ∏è</span>
                Crear Categor√≠a
            </h3>
        </div>

        <form action="/admin/categories/create" method="POST">

            <div class="form-group">
                <label class="form-label">Nombre</label>
                <input class="form-input" type="text" name="name" required>
            </div>

            <div class="form-group">
                <label class="form-label">Slug</label>
                <input class="form-input" type="text" name="slug" required>
            </div>

            <div class="form-group">
                <label class="form-label">Descripci√≥n</label>
                <textarea class="form-textarea" name="description" rows="3"></textarea>
            </div>

            <button class="btn btn-primary" style="margin-top: 10px;">
                Crear Categor√≠a
            </button>

        </form>
    </div>

    <!-- CARD DE LA TABLA -->
    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">
                <span class="card-title-icon">üìã</span>
                Lista de Categor√≠as
            </h3>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Slug</th>
                        <th>Descripci√≥n</th>
                    </tr>
                </thead>

                <tbody>
                    <% categories.forEach(c => { %>
                        <tr>
                            <td><%= c.id %></td>
                            <td><%= c.name %></td>
                            <td><%= c.slug %></td>
                            <td><%= c.description || "" %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<%- include("../partials/admin_footer", { scripts: "" }) %>