<%- include("../partials/admin_header", {
    user,
    active: 'reviews',
    pageTitle: "Reseñas",
    showAddButton: false
}) %>

<div class="admin-content">
    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">⭐ Reseñas de Productos</h3>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Producto</th>
                        <th>Usuario</th>
                        <th>Rating</th>
                        <th>Comentario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% reviews.forEach(r => { %>
                        <tr>
                            <td><%= r.id %></td>
                            <td><%= r.product_name %></td>
                            <td><%= r.user_email %></td>
                            <td><%= r.rating %> ⭐</td>
                            <td><%= r.comment %></td>
                            <td><%= r.created_at.toLocaleString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("../partials/admin_footer", { scripts: "" }) %>