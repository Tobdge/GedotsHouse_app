<%- include("../partials/admin_header", { 
    user,
    active: "products",
    pageTitle: "Nuevo Producto",
    showAddButton: false
}) %>

<div class="admin-content">

    <div class="content-card">
        <div class="card-header">
            <h3 class="card-title">üßæ Crear Nuevo Producto</h3>
        </div>

        <form action="/admin/products/create" method="POST">

            <div class="form-group">
                <label class="form-label">Nombre</label>
                <input class="form-input" type="text" name="name" required>
            </div>

            <div class="form-group">
                <label class="form-label">Slug</label>
                <input class="form-input" type="text" name="slug" required>
            </div>

            <div class="form-group">
                <label class="form-label">SKU</label>
                <input class="form-input" type="text" name="sku" required>
            </div>

            <div class="form-group">
                <label class="form-label">Categor√≠a</label>
                <select class="form-select" name="category_id" required>
                    <% categories.forEach(c => { %>
                        <option value="<%= c.id %>"><%= c.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Descripci√≥n corta</label>
                <textarea class="form-textarea" name="short_description"></textarea>
            </div>

            <div class="form-group">
                <label class="form-label">Descripci√≥n</label>
                <textarea class="form-textarea" name="description"></textarea>
            </div>

            <div class="form-group">
                <label class="form-label">Precio</label>
                <input class="form-input" type="number" name="price" step="0.01" required>
            </div>

            <div class="form-group">
                <label class="form-label">Stock</label>
                <input class="form-input" type="number" name="stock_quantity" required>
            </div>

            <div class="form-group">
                <label class="form-label">Imagen principal (URL)</label>
                <input class="form-input" type="text" name="image_url" required>
            </div>

            <button class="btn btn-primary mt-3">Crear Producto</button>

        </form>
    </div>

</div>

<%- include("../partials/admin_footer", { scripts: "" }) %>